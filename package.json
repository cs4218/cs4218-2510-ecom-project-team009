{
  "name": "ecom",
  "version": "1.0.0",
  "type": "module",
  "description": "ecommerce rest api",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix ./client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "sonarqube": "sonar-scanner",
    "seed-stress-test": "node performance-testing/data/seed-test-data.js",
    "seed-load-test-users": "node performance-testing/data/seed-load-test-users.js",
    "seed-checkout-users": "node performance-testing/data/seed-checkout-users.js",
    "run-load-test": "sh performance-testing/scenarios/user-shopping-journey/run-load-test.sh",
    "cleanup-load-test": "node performance-testing/scenarios/user-shopping-journey/cleanup.js",
    "test": "npm-run-all --serial --continue-on-error test:unit test:integration",
    "test:unit": "npm-run-all --serial --continue-on-error test:backend test:frontend",
    "test:integration": "npm-run-all --serial --continue-on-error test:backend:integration test:frontend:integration",
    "test:all": "npm-run-all --serial --continue-on-error test:unit test:integration test:e2e",
    "test:backend": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.backend.config.js",
    "test:frontend": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.frontend.config.js",
    "test:backend:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.backend.integration.config.js",
    "test:frontend:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.frontend.integration.config.js",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "seed-load-test-users": "node performance-testing/data/seed-load-test-users.js",
    "run-load-test": "sh performance-testing/scenarios/user-shopping-journey/run-load-test.sh",
    "cleanup-load-test": "node performance-testing/scenarios/user-shopping-journey/cleanup.js"
  },
  "keywords": [],
  "author": "RP",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "braintree": "^3.22.0",
    "colors": "^1.4.0",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "date-fns": "^3.3.1",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-formidable": "^1.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.3.0",
    "mongoose": "^8.1.2",
    "morgan": "^1.10.0",
    "nodemon": "^3.0.3",
    "react-icons": "^5.0.1",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@babel/core": "^7.24.5",
    "@babel/preset-env": "^7.24.5",
    "@babel/preset-react": "^7.24.1",
    "@playwright/test": "^1.44.0",
    "@types/node": "^20.12.12",
    "babel-jest": "^29.7.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mockingoose": "^2.16.2",
    "mongodb-memory-server": "^10.2.3",
    "npm-run-all": "^4.1.5",
    "sonarqube-scanner": "^4.3.2",
    "supertest": "^7.1.4"
  }
}
